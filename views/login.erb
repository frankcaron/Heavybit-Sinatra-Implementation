
<div class="login_form">
	<p>Please log in to continue.</p>
	<form action="/session" method="post">
		<table class="login_table">
			<% if @error != nil %>
				<tr>
					<td colspan="3" class="login_error">
						<%= @error %>
					</td>
				</tr>
			<% end %>
			<tr>
				<td><input type="text" name="email_or_username" placeholder="Email Or Username" tabindex=1 /></td>
			</tr>
			<tr>
				<td><input type="password" name="password" placeholder="Password" tabindex=2 /></td>
			</tr>
			<tr>
				<td class="form_button"><input type="submit" value="Log In" /></td>
			</tr>
		</table>
	</form>
</div>
<div class="form_links">
	<span><a href="/accounts/recover">Forgot your password?</a></span> |
	<span><a href="/accounts/create">Need an account?</a></span>
</div>
